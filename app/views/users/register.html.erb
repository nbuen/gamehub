<h1>Registration</h1>

<form action="/users/create" method="POST">
	<div class="form-group">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<label for="name">Name</label>
		<input class="form-control" type="name" name="user[name]" placeholder="name">
	</div>
	<div class="form-group">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<label for="username">Email</label>
		<input class="form-control" type="email" name="login[username]" placeholder="email">
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input class="form-control" type="password" name="user[password_digest]" placeholder="password">	
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>	
</form>
<div class="mt-2">
	<%= link_to "Already registered? Click HERE!", users_index_path %>
</div>